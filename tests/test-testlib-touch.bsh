#!/usr/bin/env bash

. "$(dirname ${BASH_SOURCE[0]})/testlib.sh"

setup()
{
  track_touched_files
}

begin_test "No ttouch files"
(
  set -eu
)
end_test

begin_test "Ttouch files"
{
  set -eu
  ttouch "${TRASHDIR}/test1"
}
end_test

begin_test "Ttouch files in subshell"
(
  set -eu
  ttouch "${TRASHDIR}/test2"
  ttouch "${TRASHDIR}/test3"
  ttouch "${TRASHDIR}/test4"
)
end_test

teardown()
{
  set -eu
  [ ! -e "${TRASHDIR}/test1" ]
  [ ! -e "${TRASHDIR}/test2" ]
  [ ! -e "${TRASHDIR}/test3" ]
  [ ! -e "${TRASHDIR}/test4" ]
}