#!/usr/bin/env bash

. "$(dirname ${BASH_SOURCE[0]})/testlib.sh"
. "$(dirname ${BASH_SOURCE[0]})/test_utils.bsh"
. "$(dirname ${BASH_SOURCE[0]})/../linux/elements.bsh"

begin_test "Dynamic Set Array"
(
  set -eu

  #Set up non-contiguous array
  y=(12 101 15 23 49)
  unset y[1] #delete the 1

  # Run code
  dynamic_set_a x "${y[@]}"

  # Check values
  check_a x 12 15 23 49
  contiguous_a x
)
end_test

begin_test "Remove from Array"
(
  set -eu

  x=(12 101 15 23 49)
  remove_element_a x 15
  check_a x 12 101 23 49
  contiguous_a x

  remove_element_a x 12
  check_a x 101 23 49
  contiguous_a x

  remove_element_a x 49
  check_a x 101 23
  contiguous_a x

  x=(666 101 15 666 23 49)
  remove_element_a x 666
  check_a x 101 15 23 49
  contiguous_a x

  x=(101 15 666 23 49 666)
  remove_element_a x 666
  check_a x 101 15 23 49
  contiguous_a x

  x=(666 666 101 666 15 666 666 23 666 49 666 666)
  remove_element_a x 666
  check_a x 101 15 23 49
  contiguous_a x
)
end_test

begin_test "Append to beginning of array"
(
  set -eu

  x=(11 22 33 44 11)
  add_element_pre_a x 11
  check_a x 11 22 33 44
  contiguous_a x

  add_element_pre_a x 55
  check_a x 55 11 22 33 44
  contiguous_a x

  add_element_pre_a x 22
  check_a x 22 55 11 33 44
  contiguous_a x

  x=()
  add_element_pre_a x 11
  check_a x 11
  contiguous_a x

  add_element_pre_a x 11
  check_a x 11
  contiguous_a x
)
end_test

begin_test "Append end of array"
(
  set -eu

  x=(44 11 22 33 44)

  add_element_post_a x 44
  check_a x 11 22 33 44
  contiguous_a x

  add_element_post_a x 55
  check_a x 11 22 33 44 55
  contiguous_a x

  add_element_post_a x 22
  check_a x 11 33 44 55 22
  contiguous_a x

  x=()
  add_element_post_a x 11
  check_a x 11
  contiguous_a x

  add_element_post_a x 11
  check_a x 11
  contiguous_a x
)
end_test

begin_test "Remove from string"
(
  set -eu

  x='12 101 15 23 49'
  remove_element x 15
  test "${x}" == "12 101 23 49"

  remove_element x 12
  test "${x}" == "101 23 49"

  remove_element x 49
  test "${x}" == "101 23"

  x="666 101 15 666 23 49"
  remove_element x 666
  test "${x}" == "101 15 23 49"

  x="101 15 666 23 49 666"
  remove_element x 666
  test "${x}" == "101 15 23 49"

  x="666 666 101 666 15 666 666 23 666 49 666 666"
  remove_element x 666
  test "${x}" == "101 15 23 49"

  x='12:101:15:23:49'
  IFS=':' remove_element x 15
  test "${x}" == "12:101:23:49"
)
end_test

begin_test "Append to beginning of string"
(
  set -eu

  x="11 22 33 44 11"
  add_element_pre x 11
  test "${x}" == "11 22 33 44"

  add_element_pre x 55
  test "${x}" == "55 11 22 33 44"

  add_element_pre x 22
  test "${x}" == "22 55 11 33 44"

  x="11:22:33:44:11"
  IFS=: add_element_pre x 11
  test "${x}" == "11:22:33:44"
)
end_test

begin_test "Append to end of string"
(
  set -eu

  x="44 11 22 33 44"
  add_element_post x 44
  test "${x}" == "11 22 33 44"
  add_element_post x 55
  test "${x}" == "11 22 33 44 55"
  add_element_post x 22
  test "${x}" == "11 33 44 55 22"

  x="44:11:22:33:44"
  IFS=: add_element_post x 44
  test "${x}" == "11:22:33:44"
)
end_test

begin_test "Comparing arrays"
(
  set -eu
  a=(11 22 33)
  b=(11 22 33)
  c=(11 22 31)
  d=(11 22 33 44)

  cmp_elements_a a b
  cmp_elements_a a a
  not cmp_elements_a a a
  not cmp_elements_a a d
)
end_test

begin_test "Comparing strings"
(
  set -eu

  a="11 22  33"
  b="11 22 33"
  c="11 22 33 44"
  d="11 21 33"

  cmp_elements a b
  cmp_elements a a
  not cmp_elements a c
  not cmp_elements a d
)
end_test